<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="@dimen/icon_length"
        android:layout_height="@dimen/icon_length"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:contentDescription="row_icon"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/row_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/row_icon"
        android:layout_toLeftOf="@+id/row_time"
        android:layout_toRightOf="@+id/row_icon"
        android:paddingTop="2dp"
        android:phoneNumber="false"
        android:text="Title"
        android:textAlignment="textStart"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/row_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_icon"
        android:layout_below="@+id/row_title"
        android:layout_marginBottom="3dp"
        android:layout_toLeftOf="@+id/row_unread"
        android:layout_toRightOf="@+id/row_icon"
        android:text="Last msg"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/row_time"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/row_icon"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:text="Time"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/row_unread"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/row_time"
        android:layout_below="@+id/row_time"
        android:textAlignment="center" />
</RelativeLayout>