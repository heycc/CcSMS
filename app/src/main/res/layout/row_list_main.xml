<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:contentDescription="row_icon"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/row_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/row_icon"
        android:layout_toLeftOf="@+id/row_time"
        android:layout_toRightOf="@+id/row_icon"
        android:background="#f5f2f2"
        android:text="Title" />
    <TextView
        android:id="@+id/row_msg"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/row_icon"
        android:layout_below="@+id/row_title"
        android:layout_toLeftOf="@+id/row_time"
        android:layout_toRightOf="@+id/row_icon"
        android:text="Last msg" />

    <TextView
        android:id="@+id/row_time"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/row_icon"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/row_icon"
        android:layout_alignWithParentIfMissing="false"
        android:background="#e0efd6"
        android:text="Time" />
</RelativeLayout>